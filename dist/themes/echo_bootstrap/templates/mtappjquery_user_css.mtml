@charset "UTF-8";

/* ブログ記事編集画面の[表示オプション]を非表示にする */
#display-options {
    display: none;
}


/* text */
#main-content #sortable .field-top-label .field-content .text {
  font-size: 120%;
  height: 2.5em;
}


/* field */
#main-content #sortable .field-top-label {
    margin-bottom: 2em;
}

    #main-content #sortable .field .field-header {
        margin-bottom: 1em;
        font-size: 120%;
        padding-top: .3em;
        border-top: 1px solid #BBBBBB;
    }


/* hint */
#main-content .field-top-label .hint,
#blog-settings .hint {
    color: #008822;
    background-color: #E6F3DD;
    padding: .3em;
    font-style: normal;
}


/* blog-edit-field */
#customfield_ecwebsitemainimage1-field,
#customfield_ecwebsitemainimage2-field,
#customfield_ecwebsitemainimage3-field,
#customfield_ecwebsitemainimage4-field,
#customfield_ecblogmainimage1-field,
#customfield_ecblogmainimage2-field,
#customfield_ecblogmainimage3-field,
#customfield_ecblogmainimage4-field {
  float: left;
  width: 450px;
}

#customfield_ecwebsitemainimage3-field,
#customfield_ecwebsitemainimage5-field,
#customfield_ecblogmainimage3-field,
#customfield_ecblogmainimage5-field {
  clear: both;
}

#customfield_ecwebsitemainimage1-field .hint,
#customfield_ecwebsitemainimage2-field .hint,
#customfield_ecwebsitemainimage3-field .hint,
#customfield_ecwebsitemainimage4-field .hint,
#customfield_ecblogmainimage1-field .hint,
#customfield_ecblogmainimage2-field .hint,
#customfield_ecblogmainimage3-field .hint,
#customfield_ecblogmainimage4-field .hint {
  width: auto;
}


